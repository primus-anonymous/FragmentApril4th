<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toast" />

        <Button
            android:id="@+id/snackbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snackbar" />

        <Button
            android:id="@+id/dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog" />

        <Button
            android:id="@+id/custom_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Dialog" />

        <Button
            android:id="@+id/dialog_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog list" />

        <Button
            android:id="@+id/dialog_single_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Single Choice" />

        <Button
            android:id="@+id/dialog_multiple_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Multiple Choice" />

        <Button
            android:id="@+id/dialog_custom_dialog_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Custom Dialog Fragment" />

        <Button
            android:id="@+id/dialog_fragment_custom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Fragment Custom View" />

        <Button
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottom Sheet" />

        <Button
            android:id="@+id/system_tray_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System Tray Notification" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>